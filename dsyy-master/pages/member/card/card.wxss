.card-bg{
  height:100%;
}
.card-img{
  width:100%;
  height:280rpx;
}
.card-word{
  /* font-family: PingFang-SC-Regular; */
  font-size: 28rpx;
  color: #323232;
  letter-spacing: -0.68rpx;
  line-height: 80rpx;
}
.card-button{
  height:80rpx;
  background: #EFEFEF;
  border-radius: 8rpx;
  /* font-family: PingFang-SC-Medium; */
  font-size: 28rpx;
  color: #464646;
  letter-spacing: -0.68rpx;
  line-height: 80rpx;
  float:left;
  padding-left:30rpx;
  padding-right:30rpx;
  text-align: center;
}
.card-button-recommend{
  height:80rpx;
  background: #EFEFEF;
  border-radius: 8rpx 0rpx 0rpx 8rpx;
  /* font-family: PingFang-SC-Medium; */
  font-size: 28rpx;
  color: #464646;
  letter-spacing: -0.68rpx;
  line-height: 80rpx;
  float:left;
  padding-left:30rpx;
  padding-right:30rpx;
  text-align: center;
}
.button-recommend{
  width:40rpx;
  height:80rpx;
  background: #FF7070;
  border-radius: 0rpx 8rpx 8rpx 0rpx;
  /* font-family: PingFang-SC-Medium; */
  font-size: 22rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  float:left;
  text-align: center;
  writing-mode:tb-rl;
}
.card-button-hover-recommend{
  height:80rpx;
  border-radius: 8rpx 0rpx 0rpx 8rpx;
  /* font-family: PingFang-SC-Medium; */
  font-size: 28rpx;
  letter-spacing: -0.68rpx;
  line-height: 80rpx;
  float:left;
  background: #36BE7A;
  color: #ffffff;
  padding-left:30rpx;
  padding-right:30rpx;
}
.card-button-hover{
  height:80rpx;
  border-radius: 8rpx;
  /* font-family: PingFang-SC-Medium; */
  font-size: 28rpx;
  letter-spacing: -0.68rpx;
  line-height: 80rpx;
  float:left;
  background: #36BE7A;
  color: #ffffff;
  padding-left:30rpx;
  padding-right:30rpx;
}
.card-text{
  background: #ECF8F1;
  /* font-family: PingFangSC-Regular; */
  font-size: 24rpx;
  color: #969696;
  letter-spacing: -0.27rpx;
}
.card-confirm{
  background: #36BE7A;
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  /*font-family: PingFang-SC-Medium;*/
  font-size: 32rpx;
  color: #fff;
  letter-spacing: -0.41rpx;
  line-height: 90rpx;
  text-align: center;
}
.card-cover{
  width:100%; 
  height:100%;
  position:fixed; 
  top :0px;
  opacity:0.8;
  background-color:#000;
  /* opacity:0.8; */
  text-align:center;
}
.card-box{
  opacity:1;
  width:587rpx;
  margin:30% auto;
  border-radius: 12rpx; 

  position: absolute;
  top: 0%;
  left:10%;
}
.cover-banner{
  width:587rpx;
  height:287rpx;
}
.card-box-text{
  /* font-family: PingFangSC-Regular; */
  font-size: 32rpx;
  color: #323232;
  letter-spacing: -0.77rpx;
  padding:20rpx;
}
.card-box-button{
  height: 100rpx;
  bottom: 0;
  /* font-family: PingFangSC-Regular; */
  font-size: 32rpx;
  letter-spacing: -0.77rpx;
  line-height: 100rpx;
  text-align: center;
}
.card-box-button-close{
  background: #EAEAEA;
  color: #787878;
  width:50%;
}
.card-box-button-open{
  background: #36BE7A;
  color: #FFFFFF;
  width:50%;
}
.display{
  display:inline;
}






