/* pages/market/search.wxss */
@import "../template/coin-items/coin-items.wxss";
@import "../template/favorite-items/favorite-items.wxss";

.container {
  display: flex;
  flex-direction: column;
}

.filter {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #f1f1f1;
  width: 100%;
  height: 80rpx;
}

.filter-set {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  height: 56rpx;
  margin-left: 15rpx;
  border-radius: 10rpx;
  width: 100%;
}

#cancel-btn {
  width: 100rpx;
  border-width: 0;
  padding-top: 10rpx;
}

.xx-img{
    height: 30rpx;
    width: 30rpx;
}

.search-img {
  margin: 0 20rpx;
}

.search-input {
  width: 95%;
  color: #000;
  font-size: 28rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #d1d1d1;
}

#search-btn {
  font-size: 32rpx;
  color: #2196F3;
  width: 100rpx;
  margin-left: 25rpx;
  margin-right: 5rpx;
}

.market-scv {
  width: 100%;
  display: flex;
  flex: 1;
  overflow: auto;
}

.item-line {
  height: 1rpx;
  background: #E5E5E5;
}

.noresult {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.noresult-lbl {
  margin-top: 300rpx;
  font-size: 32rpx;
  color: #999;
  margin-left: auto;
  margin-right: auto;
}