/* pages/me/selected.wxss */
.container {
  display: flex;
  flex-direction: column
}

.filter-set {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  height: 56rpx;
  margin: 0 15rpx;
  border-radius: 10rpx;
  width: 100%;
}

.filter {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #f1f1f1;
  width: 100%;
  height: 80rpx;
}

.search-lbl {
  font-size: 28rpx;
  color: #999;
  line-height: 80rpx;
  margin-left: 30rpx;
}

#cancel-btn {
  width: 100rpx;
  border-width: 0;
  padding: 10rpx 5rpx 0 0;
  margin-right: 30rpx;
}

.xx-img{
    height: 30rpx;
    width: 30rpx;
}

.search-img {
  margin-left: 30rpx;
}

.search-input {
  width: 95%;
  margin-left: 20rpx;
  color: #000;
  font-size: 28rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #d1d1d1;
}

.item-line {
  height: 1rpx;
  margin: 0 30rpx;
  background: #E5E5E5;
}

.currencies {
  display: flex;
  flex-direction: column;
}

.currencies-item {
  display: flex;
  flex-direction: column;
}

.item-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 30rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;

}

.item-name {
  font-size: 26rpx;
  color: #888;
  line-height: 37rpx;
}

.item-symbol {
  font-size: 40rpx;
  color: #000;
  line-height: 60rpx;
}

.item-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-star {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  width: 64rpx;
  margin-right: 0;
}

.star {
  width: 64rpx;
  height: 64rpx;
}

.stick {
  width: 64rpx;
  height: 64rpx;
  margin-right: 30rpx;
}

.search-view {
  font-size: 28rpx;
  color: #d1d1d1;
  line-height: 80rpx;
  margin-left: 30rpx;
}