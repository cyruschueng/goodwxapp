/*弹窗 帮抢  */
.shade_bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
}
.modal{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 750rpx;
  background: url(http://www.ixiaochengxu.cc/resource/images/plug-in/set-like/modalBg.png);
  background-size: contain;
  animation: fadeIn 700ms linear forwards;
}

@keyframes fadeIn{
  0%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}
.succBgPic{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.moaCon{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.qiangPic{
  position: relative;
  z-index: 10;
