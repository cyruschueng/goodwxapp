/* pages/supportCompetition/ranking/ranking.wxss */

.page {
  min-height: 100vh;
  background: url(http://www.ixiaochengxu.cc/resource/images/plug-in/set-like/bottombg.jpg);
  font-size: 32rpx;
  margin-top: -1px;
  padding-bottom: 20rpx;
}

.topBox {
  padding: 50rpx 20rpx 0 20rpx;
  color: #fff;
}

.topBox .flex {
  align-items: center;
}
.topBox .sub{
  overflow: hidden;
}
.myPicBox {
  width: 136rpx;
  height: 136rpx;
  border: 1rpx solid #fac8c9;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.myPic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.paiming {
  font-size: 30rpx;
}

/*排行榜  */

.rankBox {
  margin: 120rpx 20rpx 0 20rpx;
   padding-bottom: 66rpx; 
  width: auto;
  background-color: #fff;
  border-radius: 12rpx;
}

.rankol {
  justify-content: space-around;
}

.rankLi {
  width: 33.3333333333%;
  padding: 0 30rpx;
}

.firstBox {
  position: relative;
   background-color: #fff; 
   transform: translateY(-40rpx); 
   border-radius: 12rpx 12rpx 0 0;
}
 .firstBox::before,.firstBox::after{
  content: '';
   position: absolute; 
  top: 12rpx;
  width:4rpx;
  height: 95%;
   background: linear-gradient(to bottom,rgba(0, 0, 0, 0.12),rgba(0, 0, 0, 0.05),rgba(0, 0, 0, 0.03)); 

} 
.firstBox::before{
   left: -1rpx;
}
.firstBox:after{
  right: -1rpx;
}
.firstPic {
  width: 66rpx;
  height: 88rpx;
  display: block;
  margin: -40rpx auto 0 auto;
}

.secondPic {
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin: -40rpx auto 0 auto;
}

.starPic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.name {
  font-size: 30rpx;
}

.rqVal {
  color: #f24145;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.rankList {
  margin-top: 40rpx;
}

.rankItem {
  align-items: center;
  padding: 30rpx;
}

.rankItem .starPic {
  width: 90rpx;
  height: 90rpx;
}

.itemLf {
  align-items: center;
  margin-right: 20rpx;
 
}

.mingci {
  font-size: 34rpx;
  width: 68rpx;
}

.tname {
  line-height: 42rpx;
  font-size: 30rpx;

}
.starNam{
    max-width: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.time {
  font-size: 28rpx;
  color: #999;
}
.moreBtn{
  color: #f24145;
  width: 201rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 50rpx auto 0 auto;
  text-align: center;
  font-size: 30rpx;
}
.moreBtn::before{
  border-color: currentColor;
}
.moreBtn:active{
  color: #fff;
  background-color: #f24145;
  border-radius: 6rpx;
}