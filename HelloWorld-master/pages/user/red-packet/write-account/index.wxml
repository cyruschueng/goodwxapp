<!--pages/user/red-packet/write-account/index.wxml-->
<form bindsubmit='formSubmit' report-submit='{{true}}'>
    <view>
        <view class="account-item gridXb">
            <view>所属银行</view>
            <view class="grey f14">
                <picker range='{{bank_list}}' range-key='name' value='{{picker_index}}' bindchange='changeBankList'>{{bank_list[picker_index]['name']}}</picker>
            </view>
        </view>
        <view class="account-item gridXb">
            <view>银行卡卡号</view>
            <view class="grey f14 tr">
                <input type="number" name="bank_no" value="{{bank_no}}" bindinput="inputBankNo" placeholder-class='greylight' placeholder="请填写您的银行卡号"></input>
            </view>
        </view>
    </view>
    <view class="mt10">
        <view class="account-item gridXb">
            <view>持卡人姓名</view>
            <view class="grey f14 tr">
                <input type="text" name="true_name" value="{{true_name}}" bindinput="inputTrueName" placeholder-class='greylight' placeholder="请填写您的姓名"></input>
            </view>
        </view>
        <view class="account-item gridXb">
            <view>银行预留电话</view>
            <view class="grey f14 tr">
                <input type="number" name="telephone" value="{{telephone}}" bindinput="inputTelephone" placeholder-class='greylight' placeholder="请填写银行预留电话"></input>
            </view>
        </view>
    </view>

    <view class="mt20">
        <view class="grey tc f14">
            <text class="greylight iconfont icon-fxicon-3"></text> 请仔细确认所填信息准确无误，否则后果自负！
        </view>
        <view class="grey tc f14" wx:if="{{customer_service_phone == '' ? false : true}}">
            <text></text> 客服电话：{{customer_service_phone}}
        </view>
        <view class="btnBox tc ">
            <button form-type='submit' class="save-btn">确认</button>
            <button class="return-btn save-btn" catchtap='navigateBack'>返回</button>
        </view>
    </view>
</form>