/* pages/severs/index/index.wxss */
@import "../tpl.wxss";

button.tags-item::after,button.title-item::after{border: none;}
button.title-item{background: transparent;font-size: inherit;}

.no-content-img{width: 50%;}

.info-title-box{height: 92rpx;}
.info-title{background: #fff;line-height: 92rpx;white-space: nowrap;position: fixed;top: 0;left: 0;z-index: 1;box-shadow: 6px 0 12px rgba(0, 0, 0, 0.1);}
.info-title .title-item{position: relative;padding:0 30rpx;display: inline-block;}
.info-title .title-item::before{content:'';display: block;height: 2px;background: currentColor;position: absolute;bottom: 0;left: 0;right:0;opacity: 0;transition: all 0.3s linear;}
.info-title .title-item.active::before{left:30rpx;right:30rpx;opacity: 1;transition: all 0.3s linear;}
.title-item.active{font-weight: bold;}

.screen-tags{padding: 0 30rpx 10rpx;margin-top: 20rpx;white-space: nowrap;overflow-x: auto;-webkit-overflow-scrolling: touch;}
.screen-tags .tags-item{display: inline-block;padding: 10rpx 16rpx;font-size: 12px;line-height: 1;background: #fff;color: #999;margin-bottom: 10rpx;margin-right: 10rpx;border-radius: 24rpx;}
.screen-tags .tags-item.active{color: #fff;background: #f66;}

/*我要发布*/

.add-msg {
    position: fixed;
    bottom: 80rpx;
    right: 40rpx;
    z-index: 99;
}

.add-msg .add {
    width: 90rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 50%;
}

/*右侧浮动按钮*/
.aside-float{position: fixed;bottom: 40rpx;right: 30rpx;z-index: 1;}
.aside-float button{width: 76rpx;height: 76rpx;line-height: 76rpx;border-radius: 50%;padding: 0;}
.aside-float button:nth-child(n+2){margin-top: 10rpx;}

