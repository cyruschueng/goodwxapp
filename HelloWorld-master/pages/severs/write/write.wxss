/* pages/severs/write/write.wxss */
@import "../seversFont.wxss";

@import "/css/DuoguanInfo/DuoguanInfo-template-default.wxss";
.iconfont {
    font-size: inherit;
}
.form-group:nth-child(n+2){margin-top: 20rpx;}
.form-group{transition: all .15s;}
.form-item{padding: 30rpx;background: #fff;line-height: 52rpx;transition: all .15s;}
.form-item.form-item-btn:active{background-color: #f8f8f8;}
.form-tear{width: 100%;height: 160rpx;}
.form-item picker.arrowR{padding-right: 26rpx;}

.image-item{width: 165rpx;height: 165rpx;position: relative;display: inline-block;vertical-align: bottom;border-radius: 12rpx;overflow: hidden;margin-left: 10rpx;}
.image-item:nth-child(4n+1){margin-left: 0;}
.image-item:nth-child(n+5){margin-top: 10rpx;}
.image-item image{width: 100%;height: 100%;}
.image-info{display: block;width: 100%;text-align: center;font-size: 24rpx;background: rgba(0, 0, 0, 0.5);color: #fff;position: absolute;bottom: 0;left: 0;}
.image-list .image-close{width: 50rpx;height: 50rpx;line-height: 50rpx;text-align: center;color:#fff;background: rgba(0, 0, 0, 0.2);position: absolute;top: 0;right: 0;}
.image-list .image-close::before,.image-list .image-close::after,
.image-list .image-plus::before,.image-list .image-plus::after
{content: '';width: 50%;height: 1px;background: currentColor;position: absolute;top: 50%;left: 50%;}
.image-list .image-close::before{transform: translate(-50%,-50%) rotate(45deg);}
.image-list .image-close::after{transform: translate(-50%,-50%) rotate(135deg);}
.image-list .image-plus{display: block;width: 100%;height: 100%;color: #999;border:1px dashed #ddd;border-radius: 12rpx;}
.image-list .image-plus::before{transform: translate(-50%,-50%) rotate(0);}
.image-list .image-plus::after{transform: translate(-50%,-50%) rotate(90deg);}
/* 开关 */
.form-center{align-items: center;}
.form-item switch{zoom: 0.8;}
.form-item .wx-switch-input{margin-right: 0;}
.fadeInDown{transform: scale(1,0);animation: fadeInDown 0.15s 0.05s linear forwards;transform-origin: top;}
@keyframes fadeInDown{
	0%{transform: scale(1,0);}
	100%{transform: scale(1,1);}
}
.form-button{margin-bottom: 60rpx;}

.arrowR::before{right: 0;}
.container{margin: 30rpx;}
.tips-checkbox{transform: scale(0.7);}

.tag{display:inline-block;padding: 0 15rpx;line-height: 22px;font-size: 12px;margin-right: 16rpx;margin-top: 16rpx;background: #f8f8f8;color: #666;border-radius: 42rpx;transition: all 0.2s;}
.tag.active{color: #fff;background: #f66;}

