.river {
  position: absolute;
  height: 150px;
  width: 100%;
  overflow: hidden;
  background: #7e431f;
  bottom: 0;
}

.river:before {
  bottom: 100%;
  width: 100%;
  height: 10px;
  background: #7e431f;
}

.river:after {
  bottom: 0;
  width: 100%;
  height: 40px;
  background: #595;
}

