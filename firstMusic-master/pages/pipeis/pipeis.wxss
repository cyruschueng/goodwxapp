/*弹窗  */
.bgs{
   display: block;
   /* position: absolute;  */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
   /* opacity: 0.5;  */
  z-index: 13;
  overflow: hidden;
  position:fixed; 
}
.zindex{
  position: absolute;
  left: 50%;
  top: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
  z-index: 12;
  background: #8478ff;
  color: #ffffff;
  width: 420rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 20rpx;
  padding-top: 30rpx;
}
.title{
  text-align: center;
  padding: 20rpx;
  font-size: 36rpx;
}
