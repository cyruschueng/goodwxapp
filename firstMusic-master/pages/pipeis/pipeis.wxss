/*option  */
.option{
  margin: 180rpx 0 120rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-around;
  opacity:0.8;
}
.option .button{
  border:1px solid #fff;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 32rpx;
}
.option .button image{
    width: 32rpx;
    height: 40rpx;
    margin-right: 10rpx;
    position: relative;
    top: 2rpx;
}
.option .button button{
  background: none!important;
  color: #fff;
  font-size: 32rpx;
}
/* header */
.header{
  display: flex;
  justify-content: space-between;
  height: 200rpx;
}
.left{
   position: absolute;
   animation: myleft 1s;
}
.right{
  position: absolute;
  animation: myright 1s;
  right: 0;
}
.wait{
  width: 100%;
}
.wait view{
  width: 220rpx;
  position: absolute;
  text-align: center;
  z-index: 3;
  top: 470rpx; 
  left: 50%;  
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);  
  animation: winMove 1s;
  color: #f6d335;
  font-weight: bold;
  font-size: 100rpx;
}
