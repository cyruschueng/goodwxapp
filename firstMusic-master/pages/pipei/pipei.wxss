/* pages/pipei/pipei.wxss */
page{
    background: #B31313;
}
.header{
  display: flex;
  justify-content: space-between;
  height: 200rpx;
}
.left{
   position: absolute;
   animation: myleft 1s;
   transform: rotate(30deg);
   top: 100rpx;
   left: -120rpx;
}
.right{
  position: absolute;
  animation: myright 1s;
  top: 600rpx;
  right: -120rpx;
  transform: rotate(30deg);
}
.wait{
  width: 100%;
}
.wait view{
  width: 220rpx;
  position: absolute;
  text-align: center;
  z-index: 3;
  top: 380rpx; 
  left: 50%;  
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);  
  animation: winMove 1s;
  color: #f6d335;
  font-weight: bold;
  font-size: 160rpx;
}
@keyframes winMove
{
from {top:-20rpx;}
to {top:380rpx;}
}
@keyframes myleft
{
from {top:10px;left:-160px;}
to {top:100px;left:-120rpx;}
}
@keyframes myright
{
from {top:440px;right:-120px;}
to {top:340px;right:-60px;}
}
.public{
  font-size: 32rpx;
  transition: transform 0.35s;
  margin-top: 10rpx;
}
.public .bg{
    width: 340rpx;
    position: relative;
    height: 140rpx;
}
.public image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: relative;   
}
.left .text{
    text-align: right;
    padding-right: 50rpx;
}
.leftInform{
  width:340rpx;
  position:absolute;
  left: 0;
  top: 300rpx;
  height:90rpx;
  text-align: right;
  padding-right: 60rpx;
  box-sizing: border-box;
  border-top-right-radius: 70rpx;
  border-bottom-right-radius: 70rpx;
  animation: informleft 1s;
}
.rightInform{
  width:340rpx;
  position:absolute;
  right: 0;
  top: 660rpx;
  height:90rpx;
  text-align: left;
  padding-left: 60rpx;
  box-sizing: border-box;
  border-top-left-radius: 70rpx;
  border-bottom-left-radius: 70rpx;
  animation: informright 1s;
}
@keyframes informleft
{
from {top:100rpx;left:-60px;}
to {top:300rpx;left:0px;}
}
@keyframes informright
{
from {top:760rpx;right:-60px;}
to {top:660rpx;right:0px;}
}
.inform .name{
  width: 240rpx;
  padding: 20rpx 10rpx 10rpx 0;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.little{
    font-size: 26rpx;
}
.leftBg{
  background: #4f8fe7;
  border-top-right-radius: 70rpx;
  border-bottom-right-radius: 70rpx;
  
}
.leftBg image{
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  transform:rotate(-30deg);
}
.right .text{
    text-align: left;
    padding-left: 50rpx;
}
.rightBg{
  background: #f06442;
  border-top-left-radius: 70rpx;
  border-bottom-left-radius: 70rpx;
}
.rightBg image{
  position: absolute;
  top: 10rpx;
  left: 20rpx;
  transform:rotate(-30deg);
}
.inform{
    position: absolute;
    display: flex;
    color: #fff;
    font-size: 32rpx;
}
.star{
  background: #4f8fe7;
  color: #fff;
  padding: 10rpx 20rpx;
}
.out{
  background: #fff;
  color: #4f8fe7;
  padding: 10rpx 20rpx;
}
.button{
  width: 200rpx;
  text-align: center;
  margin: 0 auto;
}