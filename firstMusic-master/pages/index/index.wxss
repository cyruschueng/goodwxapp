.container{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.see{
  color: #B31313;
  font-size: 32rpx;
  padding: 0 0 20rpx 0;
  cursor: pointer;
  width: 262rpx;
  margin: 40rpx auto 60rpx;
}
.see image{
  width: 40rpx;
  position: relative;
  top: 10rpx;
}
.morePlay{
  width: 90%;
  margin:0 auto;
}
.morePlay .one{
  width: 100%;
  height: 360rpx;
  display: flex;
  margin-top: 30rpx;
}
.morePlay .one > view{
  height: 360rpx;
  flex:1;
}
.one .paiwei{
  margin-right: 15rpx;
}
.one .friends{
  margin-left: 15rpx;
}
.morePlay .two{
  width: 100%;
}
.morePlay image{
    width: 100%;
    height: 400rpx;
}
.inform{
  position: fixed;
  bottom: 0rpx;
  left: 5%;
  display: flex;
  justify-content: flex-start;
  width: 90%;
  margin:0 auto;
  background: #e1e1ff;
  border-radius: 20rpx;
  padding: 10rpx 0 0 20rpx;
}
.inform .left image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.inform .right .niceName{
    font-size: 30rpx;
    color: #626262;
}
.inform .right >view{
  margin: 12rpx 0;
}
.inform .right .group{
    display: flex;
    justify-content: space-between;
    font-size:30rpx;
    color:#626262;
}
.group .line{
    width: 100rpx;
    background: #ffffff;
    border:1px solid #f7f7f7;
    position: relative;
    border-radius: 10rpx;
    height: 10rpx;
    position:relative;
    top:14rpx;
    left: 20rpx;
}
.group .line .finish{
  position: absolute;
  top: 0;
  left: 0;
  background: #ffd73b;
  height:10rpx;
}

.right .gold{
  background: #ffffff;
  border: 1px solid #e1e1ff;
  color: #fda3a3;
  margin-left: 280rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  height: 40rpx;
  vertical-align: middle;
  position: fixed;
  right: 40rpx;
  bottom: 20rpx;
}
.right .gold image{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    position: relative;
    top: -4rpx;
    margin-right: 10rpx;
}
.button-hover{
  background: #fff;
}