/* pages/rank/rank.wxss */
.body{
  background: #eff1f5;
}
.tips{
  background-color: white;
  padding-top: 35rpx;
  padding-bottom: 22rpx;
}
.tips_content{
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #4d4d4d;
}
.header{
  width: 100%;
  height: 100rpx;
  background-color: #e0e0e0;
  text-align: center;
  position: relative;
}
.center_line{
  border-left: 1rpx solid white;
  height: 52rpx;
  border-color: transparent;
}
.rank{
  flex: 1;
  font-size: 40rpx;
  color: white;
  height: 100rpx;
  display: inline-block;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}
.cur{
  background-color: #92a0ff;
}
.content{
  flex: 1;
  position: relative
}
.content scroll-view{
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.view_container{
  padding: 20rpx 20rpx 0;
}
.friends_item{
  height: 224rpx;
  margin-bottom: 20rpx;
  background-color: white;
  box-shadow: 0 0 20rpx #ccc;
  position: relative;
}
.self_item{
  background: #92a0ff;
}
.rank_icon{
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 70rpx;
}
.rank_font{
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 70rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: white;
  font-weight: 500;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.avatar_content{
  height: 100%;
  padding-left: 80rpx;
  align-items: flex-start;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.avatar_img{
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
}
.font_content{
  flex: 1;
  height: 100%;
  padding: 22rpx 25rpx 16rpx 18rpx;
  box-sizing: border-box;
}
.rank_text{
  justify-content: flex-start;
  align-items: flex-start;
  padding-top: 20rpx;
}
.font_center_line{
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e6e6;
  padding-bottom: 20rpx;
  padding-right: 66rpx;
  align-items: center;
}
.rank_displayName{
  font-size: 34rpx;
  color: #4d4d4d;
}
.rank_time{
  font-size: 24rpx;
  color: #4d4d4d;
}
.rank_nickname{
  font-size: 24rpx;
  color:#4d4d4d;
}
.rank_message{
  font-size: 24rpx;
  color: #4d4d4d;
  margin-left: 22rpx;
  flex: 1;
}
.world_my_rank{
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
  text-align: center;
  height: 140rpx;
  line-height: 140rpx;
  color: #999;
  width: 100%;
  background: white;
  font-size: 30rpx;
  border-top: 1px solid #e6e6e6;
}
.rank_view_container{
  padding-bottom: 140rpx;
}
.self_displayName, .self_time, .self_grade, .self_message{
  color: white;
}
.self_line{
  border-color: white;
}