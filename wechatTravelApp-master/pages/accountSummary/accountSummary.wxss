.summary-title {
	margin: 46rpx auto 0;
	font-size: 38rpx;
	color: rgb(95, 95, 95);
	text-align: center;
}
.title-special {
	color: rgb(57, 166, 255);
}
.summary-canvas {
	height: 600rpx;
	margin: 0 auto;
}
.canvas {
	width: 100%;
	height: 600rpx;
	/* margin: 0 auto; */
	background-color: #ffffff;
}
.summary-sum-container {
	display: flex;
	justify-content: space-between;
	height: 120rpx;
	padding: 35rpx;
	box-sizing: border-box;
	border-top: 1rpx solid rgba(95, 95, 95, .2);
	border-bottom: 1rpx solid rgba(95, 95, 95, .2);
}
.sum-title {
	font-size: 36rpx;
	color: rgb(95, 95, 95);
	padding-left: 16rpx;
	border-left: 6rpx solid rgb(57, 166, 255);
}
.sum-money {
	font-size: 40rpx;
	color: rgb(95, 95, 95);
}
.summary-detail-container {
	margin: 0 auto 140rpx;
	padding: 35rpx;
	padding-bottom: 0;
	font-size: 36rpx;
	color: rgb(95, 95, 95);
}
.detail-title {
	border-left: 6rpx solid rgb(57, 166, 255);
	padding-left: 16rpx;
}
.detail-blocks {
	position:relative;
	top:0;
	left:0;
	margin: 0;
	margin-top: 35rpx;
	margin-left: 22rpx;
}
.block {
	position:relative;
	top:0;
	left:0;
	height: 90rpx;
	line-height: 90rpx;
	display: flex;
	margin-bottom: 20rpx;
	font-size: 34rpx;
}
.block-image {
	width: 80rpx;
	height: 80rpx;
	margin-top: 5rpx;
}
.block-image-container {
	position: absolute;
	top: 0;
	left: 0;
	width: 90rpx;
	height: 90rpx;
	margin-right: 18rpx;
	background: rgba(57, 166, 255, .2);
	border-radius: 50%;
	text-align: center;
}
.block-variety {
	position: absolute;
	top: 0;
	left: 110rpx;
	width: 90rpx;
	color: rgb(95, 95, 95);
	margin-right: 9rpx;
}
.block-summoney {
	position: absolute;
	top: 0;
	left: 200rpx;
	height: 90rpx;
	line-height: 90rpx;
	width: 290rpx;
	color: rgb(160, 160, 160);
	overflow: scroll;
}
.block-money {
	position: absolute;
	top: 0;
	right: 0;
	color: rgb(95, 95, 95);
	margin-left: 20rpx;
	text-align: right;
}
.summary-button-area {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 120rpx;
	background: #ffffff;
	box-shadow: 0 -1rpx 14rpx 3rpx rgba(227, 227, 227, .5);
}
.summary-button {	
	position: fixed;
	bottom: 15rpx;
	left: 50%;
	margin-left: -250rpx;
	width: 500rpx;
	height: 90rpx;
	line-height: 90rpx;
	padding: 0;
	font-size: 34rpx;
	color: #ffffff;
	border-radius: 45rpx;
	text-align: center;
	background: rgb(57, 166, 255);
}
.summary-button::after {
	border: 0;
}


.share-page {
	position: fixed;
	z-index: 10;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
	background: rgb(247, 247, 247);
}
.canvas1 {
	position: fixed;
	top: 30rpx;
	left: 50%;
	z-index: 20;
	margin: 0 auto;
	margin-left: -175px;
	border: 0;
	border-radius: 16rpx;
}
.share-button1, .share-button2 {
	position: fixed;
	left: 50%;
	width: 500rpx;
	height: 80rpx;
	line-height: 78rpx;
	font-size: 30rpx;
	margin-left: -250rpx;
	padding: 0;
	text-align: center;
	border: 2rpx solid rgb(57, 166, 255);
	border-radius: 40rpx;
}
.share-button1 {
	top: 890rpx;
	color: #ffffff;
	background: rgb(57, 166, 255);
}
.share-button2 {
	top: 1000rpx;
	color: rgb(57, 166, 255);
	background: rgb(247, 247, 247);
}
.share-button1::after, share-button2::after {
	border: 0;
}
.share-close {
	position: fixed;
	z-index: 30;
	top: 12rpx;
	right: 12rpx;
	width: 40rpx;
	height: 40rpx;
	background: rgba(57, 166, 255, .7);
	border-radius: 50%;
	box-shadow:0 0 4rpx 2rpx rgb(57, 166, 255);
}
.close-icon {
	width: 100%;
	height: 100%;
	border-radius: 50%;
	margin: 0;
	padding: 0;
}
.no-consume-record {
	font-size: 32rpx;
	color: rgb(160, 160, 160);
	text-align: center;
}