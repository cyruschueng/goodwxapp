/* pages/index/mission/start/start.wxss */

.review {
  display: block;
}
.review .avatar {
  display: block;
  width: 120px;
  height: 120px;
  margin: 20px auto 0px auto;
  border-radius: 50%;
}
.review .title {
  display: block;
  height: 36px;
  color: #353535;
  font-size: 15px;
  line-height: 36px;
  text-align: center;
  padding-top: 10px;
}
.review .author {
  display: block;
  color: #909398;
  font-size: 12px;
  line-height: 36px;
  text-align: center;
}
.review .author em {
  color: #576b95;
}
.review .tags {
  display: block;
  height: 24px;
  line-height: 24px;
  text-align: center;
}
.review .tags .tag-item {
  display: inline-block;
  height: 20px;
  color:#ffffff;
  font-size: 12px;
  line-height: 20px;
  padding:0px 5px;
  margin-right: 3px;
  border-radius: 3px;
  background: #ec3851;
}
.review .stars {
  display: block;
  text-align: center;
  padding: 15px 15px 0px 15px;
  margin: 0px auto;
}
.review .stars .item {
  display: inline-block;
  padding: 0px 20px;
  border-right: 0.5px dotted #dfdfdf;
}
.review .stars .item:last-child {
  border-right: 0px;
}
.review .stars .item dfn {
  display: block;
  color: #ec3851;
  font-size: 21px;
  line-height: 36px;
}
.review .stars .item em {
  display: block;
  color: #909398;
  font-size: 14px;
  line-height: 32px;
}

.controls {
  display: block;
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 0px;
  height: 120px;
}
.controls .start {
  display: block;
  width: 96px;
  height: 36px;
  color: #ffffff;
  font-size: 14px;
  line-height: 36px;
  border-radius: 5px;
  background: #ec3851;
}
.controls .rank {
  display: block;
  color: #ec3851;
  font-size: 12px;
  line-height: 36px;
  margin-top: 10px;
  background: transparent;
}