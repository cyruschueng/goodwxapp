/* pages/user/letter/letter.wxss */
page{
  background-color: #f0f0f0;
}
.reply{
  position: fixed;
  bottom: 0;
  padding: 24rpx 40rpx;
  background-color: #fff;
}
.reply input{
  display: inline-block;
  width: 520rpx;
  background-color: #d6d6d6;
  vertical-align: middle;
  padding: 15rpx;
  border-radius: 15rpx;
  
}
.reply view{
  display: inline-block;
  width: 90rpx;
  text-align: center;
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #fae003;
}
.reply-name{
  font-size: 32rpx;
  text-align: center;
  color: #999;
  padding-top: 24rpx;
}
.content{
  padding: 30rpx;
  padding-bottom: 130rpx;
}
.content .item{
  padding: 24rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
}
.content .item .info image{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
  vertical-align: middle;
}
.content .item .info .box{
  display: inline-block;
  vertical-align: middle; 
  margin: 0rpx 30rpx;
}
.item .info .box .name{
  font-size: 32rpx;
}
.item .info .box .time{
  color: #999;
  margin-top: 12rpx;
  font-size: 24rpx;
}
.item .desc{
  margin-top: 20rpx;
}
.item .desc view{
  display: inline-block;
  max-width: 640rpx;
  word-wrap: break-word;
}
.my .info{
  text-align: right;
}
.content .my{
    background-color: #f6e990;
}
.my .desc:after{
  content:".";
  clear:both;
  display:block;
  height:0;
  overflow:hidden;
  visibility:hidden;
}
.my .desc view{
  float: right;
}