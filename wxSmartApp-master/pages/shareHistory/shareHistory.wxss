/* pages/shareHistory/shareHistory.wxss */
.flex-box>view{
  width: 50%;
  display: inline-block;
  vertical-align: top;
}
.flex-box>view image{
  width: 96%;
  margin: 12rpx 2%;
  vertical-align: top;
  border-radius: 8rpx;
}
.header{
  height: 220rpx;
}
.header .background{
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 750rpx;
  height: 220rpx;
  z-index: 1;
}
.header .user-box{
  position: relative;
  top: 0;
  left: 0;
  z-index: 5;
}
.user-box .userImg{
  display: inline-block;
  margin: 30rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.user-box .name{
  display: inline-block;
  color: #fff;
  font-size: 32rpx;
}
.btn-box{
  margin-top: 10rpx;
  margin-right: 30rpx;
  display: inline-block;
  color: #fff;
  float: right;
}
.btn-box>view{
  text-align: center;
  width: 160rpx;
  margin: 25rpx;
  padding: 10rpx;
  border: 1px solid #fff;
  border-radius: 12rpx;
}
.btn-box>view image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
  position: relative;
  top: -2rpx;
}