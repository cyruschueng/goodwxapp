.wheader {
  background: #312e43;
  color: #fff;
  padding: 60rpx 40rpx;
}

.canbe {
  font-size: 92rpx;
  line-height: 120%;
  color: #feb716;
}

.process {
  padding: 40rpx 0;
}

.process .iconfont {
  display: inline-block;
  width: 92rpx;
  height: 92rpx;
  line-height: 92rpx;
  color: #fff;
  font-size: 44rpx;
  border-radius: 50%;
  background: #62987e;
  margin-bottom: 10rpx;
}

.process .sub::before {
  right: 0;
}

.process .sub:last-child::before {
  display: none;
}

.wbox {
  padding: 60rpx;
  background: #fff;
}

.wwrite {
  border-radius: 3px;
  background: none;
  height: 86rpx;
  font-size: 32rpx;
  padding: 0 30rpx;
}

.timeAn {
  width: 66px;
  height: 66px;
  border: 3px solid #999;
  border-radius: 50%;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
}

.timeAn:after, .timeAn:before, .timeAn>text {
  background: #999;
}

.timeAn>text {
  width: 8px;
  height: 8px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -4px 0 0 -4px;
  border-radius: 50%;
}

.timeAn:after, .timeAn:before {
  content: "";
  display: block;
  width: 15px;
  height: 2px;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform-origin: left center;
  transform-origin: left center;
  -webkit-animation: timeAn 12s linear infinite;
  animation: timeAn 12s linear infinite;
  border-radius: 2px;
}

.timeAn:after {
  height: 3px;
  margin-top: -1px;
}

.timeAn:before {
  width: 20px;
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
}

@-webkit-keyframes timeAn {
  from {
    -webkit-transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes timeAn {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.wtips{ padding: 30rpx;}

@import '../../common.wxss';
