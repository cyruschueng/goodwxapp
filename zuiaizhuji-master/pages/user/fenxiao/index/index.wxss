/* pages/user/fen/index/index.wxss */

page {
  font-size: 32rpx;
}

.overview {
  background: #312e43;
  color: #fff;
  padding: 60rpx 40rpx;
}

.weeks {
  font-size: 92rpx;
  line-height: 120%;
  color: #feb716;
}

.yue {
  font-size: 50rpx;
  line-height: 120%;
  color: #fe930e;
}

.ovtab {
  background: #fff;
}

.ovtab .sub {
  padding: 20rpx 0;
}

.ovtab .sub::before {
  top: 20%;
  bottom: 20%;
}

.ovtab .sub:last-child::before {
  display: none;
}

.ovtab .f20 {
  color: #fe930e;
}

.ftab {
  background: #fff;
  margin-top: 30rpx;
}

.ftab .ftab-item {
  padding: 26rpx 10px;
}

.ftab .ftab-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.ftab .ftab-item.false:active {
  background: none;
}

.ftab .ftab-item .lineText {
  max-width: 50%;
}

.ftab navigator:first-child .ftab-item::before {
  display: none;
}

.ftab .ftab-item text {
  padding-left: 30px;
}
@import '../../common.wxss';
