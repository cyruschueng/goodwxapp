/* pages/user/red-packet/write-mobile/index.wxss */
@import "/pages/user/user-fonts.wxss";

page {
    font-size: 32rpx;
}

.grey {
    color: #666;
}

.greylight {
    color: #999;
}

.account-item {
    padding: 30rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
}
.btnBox{
    margin-top: 72rpx;
}
.save-btn {
    display: inline-block;
    background: #f35150;
    color: #fff;
    width: 40%;
    line-height: 86rpx;
    font-size: 32rpx;
    margin: 0 30rpx;
}
.save-btn::after{
    border: none;
}
.save-btn:active {
    opacity: 0.9;
}

.return-btn {
    color: #888;
    background-color: #ccc;
}