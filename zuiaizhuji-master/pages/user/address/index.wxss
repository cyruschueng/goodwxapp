/* pages/user/address/index.wxss */

page {
    font-size: 32rpx;
}

.get-address {
    padding: 0 30rpx;
    line-height: 92rpx;
    background: #fff;
}

/* .add-address{padding: 0 30rpx; height: 68rpx;line-height:68rpx;margin: 11rpx 0;margin-right: -20rpx;transition: all .3s linear;} */

/* .add-address:active{background: rgba(0, 0, 0, 0.05);} */

.invoice-content {
    width: 100%;
    height: 100vh;
}

.place-bianji {
    align-items: center;
    justify-content: space-between;
    background: #fff;
    padding: 10rpx 30rpx;
}

.bianji {
    padding: 10rpx 20rpx;
    border-radius: 50%;
    transition: all 0.3s linear;
    display: inline-block;
}

.bianji .iconfont {
    font-size: 32rpx;
}

.bianji:active {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 0;
}

.invoice-item {
    padding: 20rpx 30rpx;
    background: #fff;
    align-items: center;
}

.invoice-item label {
    align-items: center;
}

radio .wx-radio-input {
    width: 20px;
    height: 20px;
}

.invoice-item .title-tag {
    zoom: 0.8;
}

/* 没有收货地址 */

.noInvoiceMsg {
    width: 100%;
    height: 60%;
    padding: 100rpx 60rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    position: relative;
    color: #666;
    top: 0;
    left: 0;
}

.noInvoice-ico {
    font-size: 160rpx;
    line-height: 1.2;
    position: relative;
    opacity: 0.8;
}

/* 添加地址按钮 */

.address-add-box {
    height: 132rpx;
}

.address-add {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx 40rpx;
    background-color: white;
    box-shadow: 0 -2px 2px rgba(0, 0, 0, 0.05);
}

/* 以下样式为 form表单 */

/* 添加地址 */

.addAdress {
    background: #fff;
}

button.addAdress::after {
    border-radius: 0;
}

.addAdress.button-hover {
    background: rgba(0, 0, 0, 0.005);
}

.invoice-item {
    padding: 20rpx 30rpx;
    background: #fff;
    align-items: center;
}

.adress-leftTit {
    align-self: flex-start;
    line-height: 78rpx;
}

.add-userName {
    height: 78rpx;
}

.ads-detailTit {
    align-self: flex-start;
}

.add-detailAds {
    height: 100rpx;
    width: 100%;
}

.title-tag {
    padding: 0 20rpx;
    font-size: 12px;
    line-height: 24px;
    display: inline-block;
    border: 1px solid;
    border-radius: 6rpx;
    margin-right: 16rpx;
}

.title-tag:last-child {
    margin-right: 0;
}

.title-tag:active {
    background: rgba(0, 0, 0, 0.05);
}

.right-more {
    padding-right: 26rpx;
}

.right-more.arrowR::before {
    right: 0;
}

.btn-box {
    width: 100%;
    padding: 0 30rpx;
    margin: 30rpx 0;
}

.btn-box button:nth-child(n+2) {
    margin-left: 30rpx;
}

button[type="warn"] {
    background: #f66;
}

.button-hover[type="warn"] {
    background: #f24f4f;
}

.hidden {
    display: none;
}
