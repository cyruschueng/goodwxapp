.Member_head {
    position: relative;
    background: #fff;
    padding: 20px 0;
    font-size: 14px;
}

.Member_img {
    width: 5rem;
    margin: 0 auto;
    text-align: center;
    color: #fff;
}

.userinfo_name {
    clear: both;
    width: 100%;
    padding-top: 10px;
    color: #334;
}

.userinfo-avatar {
    border-radius: 50%;
    width: 80px;
    height: 80px;
    border: 5px solid rgba(0, 0, 0, 0.15);
}

.user_edit_con {
    background: #fff;
}

.user_edit_li_title {
    height: 45px;
    line-height: 45px;
    padding: 0 15px;
    font-size: 14px;
    background: #f5f5f5;
    font-weight: bold;
}

.user_edit_li_input input {
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    padding: 0 10px;
    color: #333;
}

.radio-group {
    padding-left: 20rpx;
}

.radio-group radio {
    margin-right: 10rpx;
    line-height: 40px;
}
