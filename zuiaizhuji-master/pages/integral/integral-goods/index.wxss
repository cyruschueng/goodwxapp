/* pages/integral-goods/index.wxss */
@import "../integralFont.wxss";
.iconfont{font-size: inherit;}
page{font-size: 32rpx;}
.red{color: #ee4a4a;}

.integral-goods-img{width: 100%;padding-top: 50%;position: relative;}
.integral-goods-img .swiper-goods-img{width: 100%;height: 100%;position: absolute;top: 0;left: 0;}
.integral-goods-img image{width: 100%;height: 100%;}
.goods-msg{background: #fff;padding: 30rpx;}
.goods-name{font-size: 34rpx;}
.integral-num{line-height: 1.3;margin-top: 20rpx;}

.exchange-time{padding: 20rpx 30rpx;background: #fbfbfb;color: #666;font-size: 28rpx;}
.exchange-note{background: #fff;padding: 30rpx;}
.exchange-note-tit{color: #ebc35c;}

.fiexd-box{height: 92rpx;}
.integral-bottom{position: fixed;bottom: 0;left: 0;right: 0;}
.integral-bottom button{border-radius: 0;}
.integral-bottom button::after{border: none;}
.integral-btn{background: #ebc35c;color: #fff;}
.integral-btn:active{background:#e2bb55;}
.redeem-code{background: #666;color: #fff;}

.font-tips{background: rgba(0, 0, 0, 0.5);padding: 20rpx 30rpx;color: #fff;border-radius: 8rpx;position: fixed;z-index: 10;}

.integral-pop{z-index: 10;}
.integral-pop .floatBoxBg{display: block;}
.integral-cont{background: #fff;width: 500rpx; border-radius: 10rpx;overflow: hidden;z-index: 1;}
.integral-cont-tit{padding: 60rpx 30rpx;text-align: center;}
.integral-cont button{border-radius: 0;line-height: 86rpx;height: 86rpx;font-size: 32rpx;}
.integral-cont button::after{border: none;}
.cancel-btn{background: #fafafa;}
.cancel-btn:active{background: #f8f8f8;}
.confirm-btn{background: #ebc35c;color: #fff;}
.confirm-btn:active{background:#e2bb55;}

