
.plugPopup{position: fixed;top: 0;left: 0;right: 0;bottom: 0;z-index: 999999999;}
.plugPop-close{width: 80rpx;height: 80rpx;color: #fff;border: 1px solid;border-radius: 50%;position: relative;margin: 30rpx auto 0;}
.plugPop-close::before,.plugPop-close::after{content: '';display: block;width: 50%;height: 1px;background: currentColor;position: absolute;top: 50%;left: 25%;transform: translateY(-50%) rotate(45deg);}
.plugPop-close::after{transform: translateY(-50%) rotate(-45deg);}
.plugPop-close:active{background: rgba(255, 255, 255, 0.2);}
.plugPopup-content{width: 600rpx;position: absolute;z-index: 1;}
.plugPopbg{background: rgba(0, 0, 0, 0.75);width: 100%;height: 100%;position: absolute;top:0;left: 0;}

/* 图片弹窗模板 */
.img-pop .plugPopup-content{top: 50%;left: 50%;transform: translate(-50%,-50%);}
.img-pop .img-cont{width: 100%;padding-bottom: 110%;position: relative;}
.img-pop .img-cont>image{width: 100%;height: 100%;position: absolute;top: 0;left: 0;}

/* 右侧活动入口 */
.rightActive-area{width:0;height: 100vh;position: fixed;top: 0;right: 160rpx;z-index: 99999;}
.rightActive-cont{width: 160rpx;position: relative;top:600rpx;height: auto;}
.active-img{width: 160rpx;height: 160rpx;}
.active-img>image{width: 100%;height: 100%;}
