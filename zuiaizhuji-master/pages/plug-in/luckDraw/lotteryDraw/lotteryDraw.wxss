.drawBg {
    position: relative;
    z-index: 0;
    width: 100%;
    height: 1100rpx;
    overflow: hidden;
}

/*背景图片  */

.drawBgPic {
    width: 100%;
    height: 100%;
}

/*背景点缀  */

.adornBox {
    position: absolute;
    z-index: 30;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.adorn {
    position: absolute;
}

.adorn image {
    width: 100%;
    height: 100%;
}

.adorn1 {
    top: 6rpx;
    left: 40rpx;
    width: 62rpx;
    height: 58rpx;
    animation: chenjiang 6s linear infinite;
}

@keyframes chenjiang {
    0% {
        transform: translateY(0rpx);
    }

    50% {
        transform: translateY(70rpx);
    }

    100% {
        transform: translateY(0rpx);
    }
}

.adorn2 {
    top: 180rpx;
    right: 54rpx;
    width: 72rpx;
    height: 52rpx;
    animation: shengqi 5s linear infinite;
}

@keyframes shengqi {
    0% {
        transform: translate(0rpx, 0rpx);
    }

    50% {
        transform: translate(30rpx, -30rpx);
    }

    100% {
        transform: translate(0rpx, 0rpx);
    }
}

.adorn3 {
    top: 720rpx;
    right: 100rpx;
    width: 64rpx;
    height: 66rpx;
    animation: xieshengqi 3s linear infinite;
}

@keyframes xieshengqi {
    0% {
        transform: translate(0rpx, 0%);
    }

    50% {
        transform: translate(0rpx, -20%);
    }

    100% {
        transform: translate(0rpx, 0%);
    }
}

.adorn4 {
    top: 30rpx;
    left: 350rpx;
    width: 55rpx;
    height: 55rpx;
    animation: sca 1s linear infinite;
}

@keyframes sca {
    0% {
        transform: scale(1, 1);
    }

    25% {
        transform: scale(1.2, 1.2);
    }

    50% {
        transform: scale(1, 1);
    }

    75% {
        transform: scale(0.8, 0.8);
    }

    100% {
        transform: scale(1, 1);
    }
}

