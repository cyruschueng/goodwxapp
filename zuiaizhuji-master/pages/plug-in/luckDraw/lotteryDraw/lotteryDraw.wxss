/*圆盘上的灯光  */

.lightList {
    position: absolute;
    z-index: 50;
    top: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.lightItem {
    position: absolute;
    left: 50%;
    top: 0rpx;
    width: 0rpx;
    height: 100%;
}

.lightItem::before, .lightItem::after {
    content: '';
    display: block;
    position: absolute;
    border-radius: 50%;
    box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.5);
}

.smaLight::before, .smaLight::after {
    left: -10rpx;
    width: 20rpx;
    height: 20rpx;
    background-color: #ff0;
    animation: changeBig  500ms infinite;
}

.smaLight::before {
    top: 5rpx;
}

.smaLight::after {
    bottom: 5rpx;
}

.bigLight::before, .bigLight::after {
    left: -10rpx;
    width: 20rpx;
    height: 20rpx;
    background-color: #fff;
    animation: changeSma 500ms infinite;
}

.bigLight::before {
    top: 5rpx;
}

.bigLight::after {
    bottom: 5rpx;
}

.lightItem:nth-child(2) {
    transform: rotate(22.5deg);
}

.lightItem:nth-child(3) {
    transform: rotate(45deg);
}

.lightItem:nth-child(4) {
    transform: rotate(67.5deg);
}

.lightItem:nth-child(5) {
    transform: rotate(90deg);
}

.lightItem:nth-child(6) {
    transform: rotate(112.5deg);
}

.lightItem:nth-child(7) {
    transform: rotate(135deg);
}

.lightItem:nth-child(8) {
    transform: rotate(157.5deg);
}

@keyframes changeBig {
    0% {
        background-color: #ff0;
    }

    50% {
        background-color: #fff;
    }

    100% {
        background-color: #ff0;
    }
}

@keyframes changeSma {
    0% {
        background-color: #fff;
    }

    50% {
        background-color: #ff0;
    }

    100% {
        background-color: #fff;
    }
}

