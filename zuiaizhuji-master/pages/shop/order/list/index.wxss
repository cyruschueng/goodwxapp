/*mallsure.wxss*/
.top-select{background:#fff;}
.top-select .sub{padding: 20rpx 0;}
.top-select .active{color: #f35150;border-bottom: 4rpx solid #f35150;}

.mallsure-title{ background: #fff; padding: 10px;}
.sure-item{ padding:15px 10px; background: #fff; margin-top: 5px;}
.sure-img{ width: 60px; height: 60px; display: block; margin-right: 8px;}
.sure-title{ line-height: 140%;}
.message-input{ position: absolute; top: -15px; bottom: -15px; width: 100%; height: auto; }

.mallcart-float{ height: 46px;}
.mallcart-foot{ position: fixed; z-index: 999; left: 0; bottom: 0; width: 100%; height: 46px; line-height: 46px; background: #fff;}
.mall-cart-btn{ background:#e64340; display: block; color: #fff; padding: 0 30px; border-radius: 0;}


.pssel{ position:fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.8); z-index: 999;}
.psselbox{ position: absolute; left: 0; width: 100%; bottom: 0; background: #fff;}
.icon-close{ width: 24px; height: 24px; border-radius: 50%; border: 1px solid #ccc; line-height: 24px; text-align: center;}
.psseltit{ padding:15px 10px; height: 56px;}
.psselitem{  padding: 10px; min-height: 44px;}
.psselicon{width: 24px; height: 24px; border-radius: 50%; border: 1px solid #ccc; line-height: 24px; text-align: center; color: rgba(0, 0, 0, 0);}
.psselicon.active{ color: #fff; border: none; background: #09bb07;}
.add-address-btn{ background:#e64340; color: #fff; border-radius: 0;text-align: center;padding:10px 0;}

/*orderlist.wxss*/
.ol-item{ background: #fff; margin-bottom: 10px;}
.ol-item-info,.ol-item-con{ padding: 10px;}
.ol-img{ width: 60px; height: 60px;}
.ol-img image{ width: 100%; height: 100%;}
.ol-one{padding: 20rpx;background: #fafafa;}
.ol-one:nth-child(n+2){margin-top: 4rpx;}
.ol-one-text{ margin-left: 15px; line-height: 20px; height: 60px; overflow: hidden; -webkit-box-align: center;}
.ol-item-foot{ padding: 10px;}
.ol-oneplus{ width: 100%; overflow: hidden; white-space: nowrap; overflow-x: auto; -webkit-overflow-scrolling: touch;}
.ol-oneplus .ol-img{ margin-right: 6px; display:inline-block;}
.ol-item-del{ width: 22px; height: 22px; display: block; line-height: 22px; text-align: center; font-size: 18px;}































