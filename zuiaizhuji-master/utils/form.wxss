/* pages/form/list/index.wxss */



page{font-size: 32rpx;}
image{width: 100%;height: 100%;}
.form-item{background: #f8f8f8;}
.form-tit{padding: 20rpx;font-size: 30rpx;color: #999;display:block;}
.form-cot{background: #fff;padding:30rpx;}

/* 选择按钮 */
.form-choose{display: flex;line-height: 1.4;padding:20rpx 0;}
/* .form-choose:nth-child(n+2){margin-top: 10rpx;} */

/* 重置单选多选样式 */
.form-choose .wx-radio-input{width: 20px;height: 20px;margin-right: 8px;}
.wx-radio-input-checked{border-color: #09bb07!important;background: #fff!important;}
.wx-radio-input-checked::before{content: ''!important;width: 70%;height: 70%;display: block;background: #09bb07;border-radius: 50%;} 
page .wx-checkbox-input{width: 18px;height: 18px;margin-right: 8px;}
page .wx-checkbox-input-checked{background: #09bb07;border-color: #09bb07;}
.wx-checkbox-input-checked{color: #fff!important;} 

