/* pages/ranking/ranking.wxss */
button:after{
    content: none;
}
button{
  padding: 0!important;
  margin: 0!important;
  line-height: inherit;
  background-color: #ffffff!important;
}
.button-hover{
  background-color: #ffffff!important;
  color: inherit;
}
.navbar{
  display: flex;
  justify-content: space-around;
  text-align: center;
  font-size: 32rpx;
  color: #4c4c55;
}
.navbar view{
  position: relative;
  padding: 20rpx 0;
  font-size: 26rpx;
}
.navbar view.active{
  font-size: 34rpx;
}
.navbar view.active:after{
    content:'';
    width: 100rpx;
    border:2px solid #B31313; 
    position: absolute;
    bottom: 0;
    left: 34rpx;
}
.list{
  padding: 10rpx 20rpx;
}
.list .item{
    border-top: 1px solid #f7f7f7;
    display: flex;
    justify-content: space-between;
    padding:20rpx 10rpx 0 10rpx
}
.list .item .left{
  display: flex;
  justify-content: flex-start;
}
.num{
  border:1px solid #B31313;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  color: #B31313;
  margin: 40rpx 10rpx;
}
.niceImg image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.inform view{
  margin-left: 10rpx;
  padding-top: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  text-align: left;
}
.jifen{
  color: #828080;
}
.jifen image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 6rpx;
  position:relative;
  top:12rpx;
}
.musicNum{
  color: #B31313;
  height: 140rpx;
  line-height: 140rpx;
}
.yellow{
  background: #ffd800;
  color: #ffffff;
  border:1px solid #ffd800;
}
.violet{
  background: #B31313;
  color: #ffffff;
}
form{
  display: block;
  width: 100%;
  margin-bottom: 200rpx;
}