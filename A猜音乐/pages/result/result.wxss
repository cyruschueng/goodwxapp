.win{
  width: 100%;
}
 .win image{
  display: block;
  width: 220rpx;
  height: 80rpx;
  position: absolute;
  z-index: 3;
  top: 60rpx; 
  left: 50%;  
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);  
  animation: winMove 1s;
} 
@keyframes winMove
{
from {top:-20rpx;}
to {top:20rpx;}
}
.bg{
   width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 3;
}
.zindex{
  width: 80%;
  background: #fff;
  margin: 0 auto;
  position: absolute;
  border-radius: 20rpx;
  z-index: 6;
  top: 20rpx; 
  left: 50%;  
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);
}
.zindex image{
  width: 220rpx;
  position: absolute;
  z-index: 6;
  top: 20rpx; 
  left: 50%; 
  -webkit-transform: translateX(-50%);  
  -ms-transform: translateX(-50%);  
  transform: translateX(-50%);  
  animation: winMove 1s;
}
