/* pages/battle/battle.wxss */
.wait{
  margin: 160rpx auto 0;
  text-align: center;
  position: relative;
}
image.waitImg{
    width: 60%;
    height: 634rpx;  
}
image.niceImg{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border:1px solid #f7f7f7;
}
.inform{
  text-align: center;
  color: #ff7372;
  vertical-align: middle;
  margin-top: 120rpx;
}
.inform .name{
  font-size: 36rpx;
  font-weight: 400rpx;
  margin: 20rpx;
  color: #626262;
}
.inform .money image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.inform .money{
    font-size: 26rpx;
    vertical-align: middle;
    height: 40rpx;
    line-height: 40rpx;
}
.money .fen{
    position: relative;
    top: 3rpx;
    left: 10rpx;
}
.bg{
   width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 9;
}
.zindex{
  width: 70%;
  color: #626262;
  background: #ffffff;
  margin: 0 auto;
  position: absolute;
  text-align: center;
  border-radius: 20rpx;
  z-index: 9;
  height: 176rpx;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);
}
.zindex .title{
  padding: 20rpx 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.zindex .think{
  font-size: 32rpx;
  display: flex;
  text-align: center;
  color: #6157d1;
  border-top: 1px solid #f7f7f7;
}
.zindex .think > view{
  flex: 1;
  padding: 20rpx 0;
}
.zindex .think > view.one{
  border-right:1px solid #f7f7f7;
}
.cancel{
  border-radius: 40rpx;
  margin: 0 auto;
  width:360rpx;
  text-align: center;
  background: #B31313;
  color: #fff;
  padding: 16rpx;
  font-size: 28rpx;
}
.time{
    color: #8175ff;
    font-size: 100rpx;
    font-weight: bold;
    width: 120rpx;
    height: 120rpx;
    line-height: 120rpx;
    border-radius: 50%;
    position: absolute;
    z-index: 6;
    top: 47%; 
    left: 50%;  
    -webkit-transform: translate(-50%,-50%);  
    -ms-transform: translate(-50%,-50%);  
    transform: translate(-50%,-50%); 
}