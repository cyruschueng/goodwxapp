@import 'weui.wxss';

/** 妈的这个名字要改，不然page里面container会调用这里面的 **/
.container-default {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

Page{
  height: 100%;
  background-color: #EFEFF5;
  overflow-y: hidden;
}

/** 顶部tab的容器 **/
.tab-head{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: aquamarine;
  font-size: 34rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 66;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

/** 顶部tab的item的容器 **/
.tab-head-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  /** 
   * 由于容器justify-content: space-evenly未被支持 
   * 需要在具体页面中书写margin属性
   * 建议：
   *    3栏4字  margin: 0 40rpx;
   *    2栏4字  margin: 0 60rpx;
   */
}

/** 顶部tab的item激活的样式 **/
.tab-head-item.active{
  color: cadetblue;
  position: relative;
}

/** 顶部tab的item激活后的下划线 **/
.tab-head-item.active:after{
  content: "";
  display: block;
  height: 8rpx;
  width: 130rpx;
  background: cadetblue;
  position: absolute;
  bottom: 0;
  border-radius: 2rpx;
}

/** 使用带顶部tab的页面时body内容的容器 **/
.tab-content{
  /** 优化swiper卡顿的问题 **/
  -webkit-overflow-scrolling: touch;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  /** 注意顶部padding有100rpx，定义浮动元素高度时应减去 **/
  padding-top: 100rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.scroll-content{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  width: 100%;
  height: 100%;
}

/** 隐藏滚动条 **/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
