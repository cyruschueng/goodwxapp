.card-wrapper{
  display: flex;
  flex-direction: column;
  justify-content: start;
  height: 340rpx;
  margin: 20rpx 20rpx;
  border-radius: 20rpx;
  background-color: #CCCCFF;
}

.team-name-wrapper{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 60rpx;
  width: 680rpx;
  height: 100rpx;
}

.team-avatar{
  width: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
  background-color: lightsalmon;
}

.team-name{
  margin-left: 60rpx;
  font-size: 40rpx;
}

.team-info-wrapper{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
  width: 690rpx;
  height: 60rpx;
}

.team-info-item-wrapper{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  margin: 0 30rpx;
  width: 140rpx;
  height: 50rpx;
}

.team-info-number{
  margin-left: 10rpx;
  margin-right: 20rpx;
  font-size: 40rpx;
}

.team-info-word{
  width: 50rpx;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}