@import "order-template-item/order-template-item.wxss";
/* tab栏样式 */
page {
  width: 100%;
  height: 100%;
}
.myorder_tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #e0e0e0;
  text-align: center;
  box-sizing: border-box;
}

.myorder_tab_list {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #808080;
  box-sizing: border-box;
}

.myorder_tab_list.on {
  color: #fc5e2d;
  border-bottom: 5rpx solid #fc5e2d;
}

.placeholder {
  height: 80%;
}