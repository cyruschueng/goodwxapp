page {
  background-color: #ebebeb;
  width: 100%;
  height: 100%;
}

.activity-particulars {
  width: 100%;
  /* height: 262px; */
  background-color: white;
  text-align: center;
  margin-bottom: 25rpx;
}

.activity-particularsImg {
  width: 92%;
  height: 400rpx;
  text-align: center;
  border-radius:10rpx;
  margin-top: 28rpx;
}

.details-hits {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 92%;
  height: 30px; 
  line-height: 30rpx;
  margin: 0 auto;
  font-size: 11px;
  color: #b1b1b1;
  letter-spacing: 1px;
  background-color: white;
}

.hits {
  width: 30rpx;
  height: 30rpx;
  padding-right: 5px;
  vertical-align: middle;
}

.examine {
  vertical-align: middle;
}

.conditions{
  width: 80rpx;
  height: 30rpx;
  border: 2rpx solid #35C85F;
  border-radius: 50rpx;
  padding: 0rpx 7rpx;
  color: #35C85F;
  margin-left: 20rpx;
  text-align: center;
  line-height: 30rpx;
}

.conditions.orange {
  color: #fc5e2d;
  border: 2rpx solid #fc5e2d;
}

.conditions.gray {
  color: #b1b1b1;
  border: 2rpx solid #b1b1b1;
}

.time-condition{
  padding-left: 15rpx;
}
