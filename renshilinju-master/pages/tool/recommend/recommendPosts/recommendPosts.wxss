/* pages/mine/recommend/recommendPosts/recommendPosts.wxss */
page{
  background : #F2F3F2;
}
.success{
  margin : 30rpx;
  font-size: 32rpx;
  color: #333;
}
.show-theme{
  width : 100%;
  background: #F1F3F1;
  margin : 20rpx auto;
  border-radius : 10rpx;
  padding-bottom : 20rpx;
  background : #fff;
  border:1rpx solid #efefef;
  box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -webkit-box-shadow:0 1rpx 4px rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -moz-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -o-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
  -ms-box-shadow:0 1rpx 4rpx rgba(0,0,0,0.3),0 0rpx 10rpx rgba(0,0,0,0.1);
} 
.show-theme .title,.show-theme .name{
  font-weight : 500;
}
.show-theme .title,.show-theme  .message{
  font-size : 28rpx;
  padding : 30rpx 0 0 30rpx;
}
.show-theme .name,.show-theme .time{
  display : flex;
  flex-direction:row-reverse;
  padding-right : 30rpx;
  font-size : 28rpx;
}
.btn{
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.btn button{
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  padding: 0;
  flex: 1;
}
.btn .group{
  background-color: #1aad19;
  color: #fff;
}
.btn .back{
  background-color: #fff;
  color: #1aad19;
}