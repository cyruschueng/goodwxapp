<!--my.wxml-->
<view class="head_area">
  <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
  <text class="userinfo-nickname">{{userInfo.nickName}}</text>
</view>
<view class="item_area">
  <view bindtap="getMyBalance" class="one_line_area">
    <view class="one_line">
      <view class="title_area title_margin">
        <image src="/icon/money.png" style="width:40rpx;height:40rpx;"></image>
        <text class="main_text title_margin">我的余额</text>
      </view>
      <image src="/icon/read_more.png" style="width:20rpx;height:30rpx;margin-right:24rpx;"></image>
    </view>
    <view class="line2"></view>
  </view>
  <view bindtap="getMyOrder" class="one_line_area">
    <view class="one_line">
      <view class="title_area title_margin">
        <image src="/icon/order.png" style="width:40rpx;height:40rpx;"></image>
        <text class="main_text title_margin">我的订单</text>
      </view>
      <image src="/icon/read_more.png" style="width:20rpx;height:30rpx;margin-right:24rpx;"></image>
    </view>
    <view class="line2"></view>
  </view>
  <view bindtap="getServiceInfo" class="one_line_area">
    <view class="one_line">
      <view class="title_area title_margin">
        <image src="/icon/service.png" style="width:40rpx;height:40rpx;"></image>
        <text class="main_text title_margin">联系客服</text>
      </view>
      <image src="/icon/read_more.png" style="width:20rpx;height:30rpx;margin-right:24rpx;"></image>
    </view>
    <view class="line2"></view>
  </view>
  <view bindtap="getAbountUS" class="one_line_area">
    <view class="one_line">
      <view class="title_area title_margin">
        <image src="/icon/more.png" style="width:40rpx;height:40rpx;"></image>
        <text class="main_text title_margin">关于我们</text>
      </view>
      <image src="/icon/read_more.png" style="width:20rpx;height:30rpx;margin-right:24rpx;"></image>
    </view>
  </view>
</view>
