.pop-error {
  background: #e64340;
  color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 3;
  position: fixed;
}

.normal-bottom {
  background: #1AAD19;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 3;
  position: fixed;
}

.page-center {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #888888;
  font-size: 30rpx;
}

.new-form-label {
  margin-right: 1em;
  min-width: 4em;
  text-align: justify;
  text-align-last: justify;
  word-wrap: break-word;
  word-break: break-all;
}

.location {
  background-color: #fff;
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

.zhezhao_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.zhezhao_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
