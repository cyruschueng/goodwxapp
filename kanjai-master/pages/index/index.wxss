/*轮播*/
page{
  background-color:#f2f2f2;
}
.swiper{
  width: 750rpx;
  height: 416rpx;
}
.swiper swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.produce image{
  width: 100%;
  height: 400rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.text{
  padding:0 20rpx 20rpx 20rpx;
  background: #fff;
  position: relative;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.container .title{
    font-size: 28rpx;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;		  
    overflow: hidden;
    white-space: nowrap;
    width:100%;
    list-style:disc inside none;
    text-align: left;
}
.container .price{
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
    color: #626262;
    padding: 10rpx 0 0 0;
}
.price .big{
  font-size: 36rpx;
}
.price .color{
    margin-left: 20rpx;
    font-size: 24rpx;
}
.left view{
  display: inline-block;
  color: #b52e32;
}
.progress{
  margin-top: 20rpx;
  font-size: 26rpx;
  background: #fff;
  padding: 20rpx 0;
}
.progress .top{
  display: flex;
  justify-content: flex-start;
  width: 90%;
  margin: 0 auto;
}
.top .jindu{
  line-height:50rpx;
}
.progress .top image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.bar{
  position: relative;
  padding: 30rpx 0;
}
.parents{
  position: absolute;
  height: 16rpx;
  width: 84%;
  background: #bababa;
  border-radius: 10rpx;
  left: 8%;
}
.child{
  position: absolute;
  height: 16rpx;
  background: #fb6707;
  border-radius: 10rpx;
  left: 8%;
}
.priceBar{
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 10rpx auto;
  color: #626262;
}
.buttons{
  display: flex;
  justify-content: space-between;
  width: inherit;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}
.buttons .button{
  background: #b52e32;
  color: #fff;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  cursor: pointer;
}
.bar .money{
  color: #fb6707;
  padding-bottom: 20rpx;
}
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 6;
}
.footer{
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;
}
.footer view{
    text-align: center;
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
}
.cancel{
  margin-top: 10rpx;
}
.footer button{
  font-size: 32rpx;
  padding: 0!important;
  margin: 0!important;
  border-radius: 0!important;
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
}
button:after{
  content: none;
}
.poster{
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
}
.poster{
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
}
.stock{
  font-size: 24rpx;
  color: #626262;
  padding: 10rpx;
}
.stock .stockColor{
    color: #f5b141;
}
.tab{
  width:100%;
  background: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
  margin-top: 20rpx;
  position: relative;
}
.tabItem{
  width:100%;
  cursor: pointer;
  padding: 20rpx 0;
}
.tabItem.active{
  color: #b52e32;
}
.content{
  width:100%;
  background: #fff;
  padding: 20rpx 20rpx 60rpx 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.content view{
  line-height: 46rpx;
}
.now{
  padding: 10rpx 0 20rpx 0;
}
.time{
  padding: 20rpx;
  position: relative;
}
.time text{
  color:#f5b141;
}
.time:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    top:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.nowPrice{
  font-size:26rpx;
  background:#fff;
  display: flex;
  justify-content: space-around;
  text-align: center;
  border-bottom: 1px solid #ddd;
  border-top: 1px solid #ddd;
}
.nowPrice .item{
  padding:30rpx;
  width: 100%;
  position: relative;
  color: #000;
}
.item.two:after{
    content:" ";
    display: inline-block;
    height:100%;
    position:absolute;
    top:0;
    left:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleX(0.5);
    transform:scaleX(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.item.two:before{
    content:" ";
    display: inline-block;
    height:100%;
    position:absolute;
    top:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleX(0.5);
    transform:scaleX(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.item .pay{
  color: #ab988a;
  font-size: 38rpx;
}
.Countdown{
  font-size: 28rpx;
  height:60rpx;
  line-height:60rpx;
}
.buttons:after{
    content:none;
}
.content{
  width: 90%;
  margin: 0 auto;
  text-align: center;
}
.produce{
  border:1px solid #ddd;
  border-radius: 20rpx;
}
.now{
  font-size: 28rpx;
  font-weight: bold;
}
.box{
  background: #fff;
  margin-top: 20rpx;
}
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 6;
}