/* pages/play/index.wxss */
@import '/utils/code-lighter.wxss';
.progress_box{
  position: relative;
  width:50px;
  height: 50px; /* 这里的宽高是必须大于等于canvas圆环的直径 否则绘制到盒子外面就看不见了
// 一开始设置 width:440rpx; height:440rpx; 发现 在360X640分辨率的设备，下绘制的圆环跑盒子外去了
// 小程序使用rpx单位适配 ，但是canvas绘制的是px单位的。所以只能用px单位绘制的圆环在盒子内显示*/
  display: flex; 
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin: 0 auto;
}
.progress_bg{
  position: absolute;
    width:50px;
  height: 50px;
}
.progress_canvas{
  width:50px;
  height: 50px;
}
.progress_text{
  position: absolute;
  display: flex; 
  align-items: center;
  justify-content: center
}
.progress_info{  
  font-size: 36rpx;
  letter-spacing: 2rpx;
  color:#fb9126;
}
.progress_dot{
  width:16rpx;
  height: 16rpx; 
  border-radius: 50%;
  background-color: #fb9126;
}

.question{
  font-size: 28rpx;
  padding:0rpx 20rpx;
}
.answer{
  padding: 0 20rpx;
}
.answer-item{
  margin:10rpx 0rpx;
  border-radius: 35rpx;
  border:1px solid #ddd;
  background:#ddd;
  padding: 10rpx 20rpx;
  color:#6c6c6c;
}
.answer-item.correct{
  background: #6495ed;
  color:#fff;
}
.answer-item.error{
  background: #fa3a3a;
  color:#fff;
}
