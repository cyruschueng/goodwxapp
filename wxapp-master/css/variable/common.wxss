/**
 * 公共变量
 */
.hide {
  display: none;
}
.show {
  display: inline-block;
}
.word-break {
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
}
.ellipsis {
  display: inline-block;
  zoom: 1;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.txt-right {
  text-align: right;
}
.placeholder {
  color: #8a8a8a;
}
